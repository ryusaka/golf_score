{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es7", "dom"],
    "sourceMap": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "containers/*": [
        "./src/app/containers/*",
      ],
      "components/*": [
        "./src/app/components/*",
      ],
      "lib/*": [
        "./src/app/lib/*"
      ],
      "modules/*": [
        "./src/app/modules/*"
      ]
    },
  },
  "include": [
    "src/app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "built/**",
    "dist",
  ]
}
